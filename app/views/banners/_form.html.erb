<%= form_with(model: banner) do |form| %>
  <% if banner.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
   <div class="mb-3">
    <%= form.label :active, class: "form-label" %>
    <%= form.check_box :active %>
  </div>
   <div class="mb-3">
    <%= form.label :link, class: "form-label" %>
    <%= form.text_field :link, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.rich_text_area :description, class: "form-control" %>
  </div>
   <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label "Frequency", class: "form-label" %>
    <%= form.number_field :freq, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :customer, class: "form-label" %>
    <%= form.text_field :customer, class: "form-control" %>
  </div>
   <div class="mb-3">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
