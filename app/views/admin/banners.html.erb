<h3>Banners</h3>
<%= render 'admin/nav_links', page: "banner"%>

<div class="p-3">
<%= link_to "New banner", new_banner_path , class: "btn btn-primary"%>
</div>

<div class="table-responsive">
<table class="table table-striped table-hover my-4">
  <thead>
    <tr>
      <th scope="col">Photo</th>
      <th scope="col">Title</th>
      <th scope="col">Active</th>
      <th scope="col">Link</th>
      <th scope="col">Frequency</th>
      <th scope="col">Customer</th>
      <th scope="col">Description</th>
      <th colspan=3  class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= link_to image_tag(banner.image_as_thumbnail 50), banner.image if banner.image.attached? %></td>
        <td><%= banner.title %></td>
        <td><%= banner.active %></td>
        <td><%= banner.link %></td>
        <td><%= banner.freq %></td>
        <td><%= banner.customer %></td>
        <td><%= banner.description %></td>
        <td>
          <%= link_to "Show", banner, class: "btn btn-info" %>
        </td>
        <td>
          <%= link_to "Edit", edit_banner_path(banner), class: "btn btn-primary" %>
        </td>
        <td>
          <%= button_to "Delete", banner, method: :delete, class: "btn btn-danger" %>
        </td>
    <% end %>
  </tbody>
</table>
</div>
