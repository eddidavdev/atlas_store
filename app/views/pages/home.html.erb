<%# <%= render 'layouts/featurettes' %>
<% if(!@banner.nil?) %>
<div class="card mb-3">
<div class="text-center">
 <%= link_to image_tag(@banner.image_as_thumbnail(500), class:"rounded", height:'100px', preserveAspectRatio: "xMidYMid slice"), @banner.image if @banner.image.attached?  %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @banner.description %></p>
    <p class="card-text"><%= @banner.freq %></p>
  </div>
</div>
<% end %>
<div class="px-4 py-5 my-5 text-center">
  <img class="d-block mx-auto mb-4" src="logo.jpg" alt=""  height="100">
  <h1 class="display-5 fw-bold">Atlas</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Primary button</button>
      <button type="button" class="btn btn-outline-secondary btn-lg px-4">Secondary</button>
    </div>
  </div>
</div>
<br>
<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <img src="/atlas.jpg" class="d-block mx-lg-auto img-fluid" alt="Atlas Products" width="700" height="500" loading="lazy">
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold lh-1 mb-3">Responsive left-aligned hero with image</h1>
      <p class="lead">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Primary</button>
        <button type="button" class="btn btn-outline-secondary btn-lg px-4">Default</button>
      </div>
    </div>
  </div>
</div>


